<%- model_class = @talk.class -%>
<div class="page-header">
  <h1><%= @talk.title %></h1>
</div>

<dl class="dl-horizontal">
  <%= raw @talk.embed_url_widget %>
</dl>

<% if current_author %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
      talks_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_talk_path(@talk), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      talk_path(@talk),
      :method => 'delete',
      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
      :class => 'btn btn-danger' %>
  </div>
<% end %>

<% content_for(:more_from_author) do %>
  <% if @more_from_author.any? %>
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Outras do Autor</li>
        <% @more_from_author.each do |talk| %>
          <li><%= link_to talk.title, talk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

